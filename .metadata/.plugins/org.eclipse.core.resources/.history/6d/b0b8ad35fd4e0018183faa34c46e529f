import java.awt.Color;
import java.awt.Graphics;

public class Test extends Ammo
{
	private Color col;

	public Test(int x, int y, int w, int h, int s, Color c) {
		super(x,y,w,h,s,h/5);
		setColor(c);
	}
	
	public void setColor(Color c) {
		col=c;
	}
	
	public Color getColor() {
		return col;
	}

	private void fade() {
		col=new Color(bounds(col.getRed()-1),bounds(col.getGreen()-1),bounds(col.getBlue()-1));
		setHeight(getHeight()-1);
		setD(getHeight()/5);
	}
	
	private int bounds(int a) {
		if (a>255) return 255;
		else if (a<0) return 0;
		else return a;
	}
	
	public void draw( Graphics window )
	{
		fade();
		window.setColor(col);
		window.fillRect(getX(), getY(), getWidth(), getHeight());
	}
}
