import static java.lang.System.*;

public class LoopStats
{
	private int start, stop;

	public LoopStats()
	{
		start=0;
		stop=1;

	}

	public LoopStats(int beg, int end)
	{
		start=beg;
		stop=end;
		

	}

	public void setNums(int beg, int end)
	{
		start=beg;
		stop=end;

	}

	public int getEvenCount()
	{
		int evenCount=0;

		for (int i=start; i<=stop;i++) {
			if (i%2==0) {
				evenCount++;
			}
		}


		return evenCount;
	}

	public int getOddCount()
	{
		int oddCount=0;

		for (int i=start; i<=stop;i++) {
			if (Math.abs(i)%2==1) {
				oddCount++;
			}
		}



		return oddCount;
	}

	public int getTotal()
	{
		int total=0;

		for (int i=start; i<=stop;i++) {
			total+=i;
		}


		return total;
	}
	
	public String toString()
	{
		return String.format(start + " " + stop+"\ntotal %s\neven count %s\nodd count %s",getTotal(),getEvenCount(),getOddCount());
	}
}