			a.move("DOWN");	//fix later
		}
	}

	public void removeDeadOnes(List<Ammo> shots)
	{
		for (Alien a: aliens) {
			for (Ammo s: shots) {
				//conditional to test for overlapping, delete both?
			}
		}
	}

	public String toString()
	{
		return "";
	}
}
